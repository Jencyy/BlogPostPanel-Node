<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        /* Add styles for the body and main content area */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            /* Light background for contrast */
        }

        main {
            padding: 20px;
            min-height: calc(100vh - 200px);
            /* Adjust to fit header and footer */
        }

        .blogs-list {
            max-width: 1200px;
            /* Limit width for large screens */
            margin: 0 auto;
            /* Center the content */
        }

        .blog-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            /* Responsive grid layout */
            gap: 20px;
            /* Space between cards */
        }

        .blog-card {
            background-color: white;
            /* White background for cards */
            border-radius: 8px;
            /* Rounded corners */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            /* Subtle shadow for depth */
            overflow: hidden;
            /* Ensures image doesn't overflow */
            transition: transform 0.2s;
            /* Smooth hover effect */
        }

        .blog-card:hover {
            transform: scale(1.03);
            /* Slight zoom on hover */
        }

        .blog-image {
            width: 100%;
            /* Make image take full width of the card */
            height: 200px;
            /* Fixed height for uniformity */
            object-fit: cover;
            /* Crop image to fill height */
        }

        .blog-content {
            padding: 15px;
            /* Padding for content */
        }

        .blog-content h3 {
            margin: 0 0 10px;
            /* Space between title and paragraph */
            font-size: 1.5em;
            /* Title font size */
        }

        .blog-content p {
            color: #666;
            /* Gray color for content text */
            margin-bottom: 10px;
            /* Space below the paragraph */
        }

        .blog-actions {
            padding: 15px;
            /* Add padding for button actions */
            display: flex;
            /* Flexbox for button alignment */
            justify-content: space-between;
            /* Space buttons apart */
        }

        .btn-edit,
        .btn-delete {
            padding: 10px 15px;
            /* Padding for buttons */
            border: none;
            /* Remove default border */
            border-radius: 5px;
            /* Rounded corners for buttons */
            cursor: pointer;
            /* Pointer cursor on hover */
            text-decoration: none;
            /* Remove underline from links */
            color: white;
            /* White text color */
        }

        .btn-edit {
            background-color: #007bff;
            /* Bootstrap primary color */
        }

        .btn-delete {
            background-color: #dc3545;
            /* Bootstrap danger color */
        }

        .btn-edit:hover {
            background-color: #0056b3;
            /* Darker blue on hover */
        }

        .btn-delete:hover {
            background-color: #c82333;
            /* Darker red on hover */
        }

        .alert {
            position: absolute;
            top: 60px;
            right: 60px;
            background-color: #5348c7;
            padding: 10px;
            color: #ddd;
            border-radius: 10px;
            z-index: 1111;
        }
    </style>
</head>

<body>
    <%- include('./particals/header.ejs') %>

        <main>
        

                    <div class="blogs-list">
                        <h2>Recent Blogs</h2>
                        <div class="blog-cards">
                            <%
                                recentBlogs=blogs.slice().reverse().slice(0, 3); 
                                recentBlogs.forEach(blog=> {
                                %>
                                <div class="blog-card">
                                    <img src="/upload/<%= blog.image %>" alt="Blog Image" class="blog-image">
                                    <div class="blog-content">
                                        <h3>
                                            <%= blog.title %>
                                        </h3>
                                        <p>
                                            <%= blog.content.substring(0, 100) %>...
                                        </p>
                                    </div>
                                    <% if (user && user.role==='admin' ) { %>
                                        <div class="blog-actions">
                                            <a href="/blogs/editForm/<%= blog._id %>" class="btn-edit">Edit</a>
                                            <a href="/blogs/delete/<%= blog._id %>" class="btn-delete">Delete</a>
                                        </div>
                                        <% } %>
                                </div>
                                <% }) %>
                        </div>
                    </div>
        </main>

        <%- include('./particals/footer.ejs') %>
</body>

</html>